{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Journal coverage bar chart",
  "mark": "bar",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "timeUnit": "year",
      "axis": {
        "title": ""
      }
    },
    "y": {
      "field": "coverage",
      "type": "quantitative",
      "scale": {
        "domain": [0, 1]
      },
      "axis": {
        "title": "Coverage",
        "format": ".0%"
      }
    }
  },
  "config": {
    "mark": {
      "color": "#efdada"
    }
  }
}